  author = {Madireddy, S. and Akçay, C. and Kruger, S. E. and Amara, T. Bechtel and Sun, X. and McClenaghan, J. and Koo, J. and Samaddar, A. and Liu, Y. and Balaprakash, P. and Lao, L. L.},
