  file = {Yang2024_Effect_of_anisotropic_thermal_transport_on_tearing_mode_stability_in_negative.pdf:Yang2024_Effect_of_anisotropic_thermal_transport_on_tearing_mode_stability_in_negative.pdf:application/pdf}
