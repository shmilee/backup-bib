@article{Nastac2024Phasespace,
  title = {Phase-Space Entropy Cascade and Irreversibility of Stochastic Heating in Nearly Collisionless Plasma Turbulence},
  author = {Nastac, Michael L. and Ewart, Robert J. and Sengupta, Wrick and Schekochihin, Alexander A. and Barnes, Michael and Dorland, William D.},
