@article{Carloni2024Use,
  title = {Use of the {{OSCAR-Fusion V1}}.4.a Code for a Preliminary Assessment of the {{ACP}} Contamination within the Main {{ITER}} Water Cooling Circuit},
  author = {Carloni, D. and Dacquait, F. and Polunovskiy, E. and Broutin, F. and Pace, L. Di and Javier, F. and Moscatelli, E. and Tonqueze, Y. Le},
  date = {2024-06},
  journaltitle = {Nuclear Fusion},
