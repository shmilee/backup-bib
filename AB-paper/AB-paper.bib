  file = {Nastac2024_Phase-space_entropy_cascade_and_irreversibility_of_stochastic_heating_in_nearly.pdf:Nastac2024_Phase-space_entropy_cascade_and_irreversibility_of_stochastic_heating_in_nearly.pdf:application/pdf}
}

