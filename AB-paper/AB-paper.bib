  timestamp = {2024-05-12T17:49:30Z},
  file = {Ishizawa2024_Plasma_beta_dependence_of_turbulent_transport_suggesting_an_advantage_of_weak.pdf:Ishizawa2024_Plasma_beta_dependence_of_turbulent_transport_suggesting_an_advantage_of_weak.pdf:application/pdf}
