  url = {https://dx.doi.org/10.1088/1741-4326/ad7bca},
  urldate = {2024-10-21},
  abstract = {Alfvén eigenmodes are of great interest in any fusion device as they can be excited by fast ions in the plasma. If the modes grow to large amplitudes, they can cause transport and redistribution of the fast ions, thus limiting fusion performance. To save computational resources, the resonant kinetic interaction between the fast-particle species and the modes is often modeled by MHD-kinetic hybrid codes. Here, we present such a hybrid model which is applicable to three-dimensional magnetic fields, accounts for a finite parallel electric field and multiple MHD modes present at the same time. The model extends the one previously implemented in the CKA-EUTERPE code allowing for a better estimate of the damping due to the parallel electric field and nonlinear mode-mode interaction. The capabilities of our model are illustrated by applying the code to model nonlinear frequency chirping and fast-ion profile flattening.},
  langid = {english},
  annotation = {abstractTranslation: 由于Alfv é n本征模可以被等离子体中的快离子激发，因此在任何聚变装置中都引起了极大的兴趣。如果这些模式增长到较大的振幅，它们会引起快离子的输运和再分布，从而限制聚变性能。为了节省计算资源，快粒子种类和模式之间的共振动力学相互作用通常用MHD -动力学混合代码来模拟。在这里，我们提出了一种适用于三维磁场的混合模型，该模型考虑了一个有限的平行电场和同时存在的多个MHD模式。该模型扩展了以前在CKA -欧忒耳珀代码中实现的模型，从而可以更好地估计由于平行电场和非线性模式-模式相互作用而产生的阻尼。 通过应用该程序对非线性频率啁啾和快离子轮廓展平进行建模，说明了我们模型的能力。},
  timestamp = {2024-10-21T14:03:35Z},
  file = {Slaby2024-a_perturbative_multi-mode_model_with_finite_parallel_electric_field_for_fast-ion-driven_alfvén_eigen.pdf:Slaby2024-a_perturbative_multi-mode_model_with_finite_parallel_electric_field_for_fast-ion-driven_alfvén_eigen.pdf:application/pdf}
}

@article{Slade-Harajda2024consequences,
  title = {The Consequences of Tritium Mix for Simulated Ion Cyclotron Emission Spectra from Deuterium-Tritium Plasmas},
  author = {Slade-Harajda, T. W. and Chapman, S. C. and Dendy, R. O.},
  date = {2024-10},
  journaltitle = {Nuclear Fusion},
  shortjournal = {Nucl. Fusion},
  volume = {64},
