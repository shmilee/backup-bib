  file = {Madireddy2024-efit-prime_probabilistic_and_physics-constrained_reduced-order_neural_network_model_for_equilibrium.pdf:Madireddy2024-efit-prime_probabilistic_and_physics-constrained_reduced-order_neural_network_model_for_equilibrium.pdf:application/pdf}
}

