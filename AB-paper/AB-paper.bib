@article{Puchmayr2024Effect,
  title = {Effect of Symmetry-Breaking on the {{MHD}} Edge Stability Limit of Tokamak Plasmas},
  author = {Puchmayr, J. and Dunne, M. and Strumberger, E. and Willensdorfer, M. and Zohm, H. and Hindenlang, F. and Team, the ASDEX Upgrade},
  date = {2024-06},
  journaltitle = {Nuclear Fusion},
  shortjournal = {Nucl. Fusion},
