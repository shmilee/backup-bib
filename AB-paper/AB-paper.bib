  timestamp = {2024-10-22T03:08:29Z},
  file = {Nelson2024-characterization_of_the_elm-free_negative_triangularity_edge_on_diii-d.pdf:Nelson2024-characterization_of_the_elm-free_negative_triangularity_edge_on_diii-d.pdf:application/pdf}
