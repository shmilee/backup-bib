  file = {Bonanomi2024_From_L-mode_to_the_L–H_transition,_experiments_on_ASDEX_upgrade_and_related.pdf:Bonanomi2024_From_L-mode_to_the_L–H_transition,_experiments_on_ASDEX_upgrade_and_related.pdf:application/pdf}
