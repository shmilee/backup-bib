@article{Heo2024Development,
  title = {Development of a Neural Network Model for Peeling–Ballooning Stability Analysis in the {{KSTAR}} Tokamak Pedestals},
  author = {Heo, C. and Kim, B. and Kwon, O. and Kim, S. K. and Na, Y.-S.},
  date = {2024-06},
  journaltitle = {Nuclear Fusion},
  shortjournal = {Nucl. Fusion},
