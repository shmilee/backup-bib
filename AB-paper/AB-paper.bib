@article{murabito2024ObservationAlfv,
  title = {Observation of {{Alfv}}\textbackslash 'en {{Wave Reflection}} in the {{Solar Chromosphere}}: {{Ponderomotive Force}} and {{First Ionization Potential Effect}}},
  shorttitle = {Observation of {{Alfv}}\textbackslash 'en {{Wave Reflection}} in the {{Solar Chromosphere}}},
  author = {Murabito, Mariarita and Stangalini, Marco and Laming, J. Martin and Baker, Deborah and To, Andy S. H. and Long, David M. and Brooks, David H. and Jafarzadeh, Shahin and Jess, David B. and Valori, Gherardo},
