  file = {Wen2024_Effects_of_inter-ELM_quasi-coherent_modes_on_the_dynamics_of_pedestal.pdf:Wen2024_Effects_of_inter-ELM_quasi-coherent_modes_on_the_dynamics_of_pedestal.pdf:application/pdf}
