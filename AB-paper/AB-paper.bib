  file = {Li2023_Extended_Magnetic_Reconnection_in_Kinetic_Plasma_Turbulence.pdf:Li2023_Extended_Magnetic_Reconnection_in_Kinetic_Plasma_Turbulence.pdf:application/pdf}
}

