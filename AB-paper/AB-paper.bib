}

@article{Slaby2024perturbative,
  title = {A Perturbative Multi-Mode Model with Finite Parallel Electric Field for Fast-Ion-Driven {{Alfvén}} Eigenmodes},
  author = {Slaby, C. and Könies, A. and Kleiber, R.},
  date = {2024-10},
