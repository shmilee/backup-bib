  timestamp = {2024-05-29T21:48:18Z},
  file = {Xu2024_Investigation_on_the_edge_cooling_threshold_of_the_density_limit_in_the_J-TEXT.pdf:Xu2024_Investigation_on_the_edge_cooling_threshold_of_the_density_limit_in_the_J-TEXT.pdf:application/pdf}
