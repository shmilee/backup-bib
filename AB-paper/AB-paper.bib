@article{Auluck2024Symmetry,
  title = {Symmetry and Structure in the “{{Generalized Plasma Focus}} Problem”},
  author = {Auluck, S. K. H.},
  date = {2024-09-17},
  journaltitle = {Physics of Plasmas},
  shortjournal = {Physics of Plasmas},
  volume = {31},
  number = {9},
  pages = {092507},
  issn = {1070-664X},
  doi = {10.1063/5.0225122},
  url = {https://doi.org/10.1063/5.0225122},
  urldate = {2024-10-21},
  abstract = {The “Generalized Plasma Focus problem” refers to a generic class of plasma propagation phenomena that share many features of a dense plasma focus device. Its recent theoretical development has been shown to predict some features of the pinch phase in PF-1000 and POSEIDON. The theory attempts to decompose the plasma propagation problem into two weakly interdependent subproblems. This is achieved by expressing every physical variable of an applicable continuum model of the plasma as the product of a scaling parameter, which contains device-related information and represents its numerical magnitude, and a scaled variable that is devoid of device-related information, is of order unity, and represents the spatiotemporal structure of that variable. The first subproblem seeks a traveling surface of revolution whose local normal velocity equals the scaling parameter for velocity and is aligned with the magnetic force density. Spatiotemporal distributions of all the scaled variables must move along with this reference surface by definition. This paper explores the resulting scaling theory and its symmetry properties. A new coordinate transformation results in a formula for the spatiotemporal distribution of the magnetic field of the curved and non-steady plasma sheath. New insights into the snowplow effect are obtained. A current sheath with a rear boundary exists only when the current is decreasing and only when the current carrying plasma is less dense than the fill gas. The current sheath thickness is the same for small and large devices. The geomagnetic flux compression problem has an exact solution.},
  langid = {american},
  annotation = {abstractTranslation: "广义等离子体聚焦问题"是指具有稠密等离子体聚焦装置的许多特征的等离子体传播现象的总称。它最近的理论发展已经被证明可以预测PF - 1000和波塞冬中夹点相的一些特征。该理论试图将等离子体传播问题分解为两个弱相互依赖的子问题。这是通过将等离子体连续体模型的每个物理变量表示为一个缩放参数的乘积来实现的，该缩放参数包含与设备相关的信息并表示其数值大小，而没有与设备相关的信息的缩放变量具有阶的统一性，并表示该变量的时空结构。 第一个子问题寻求一个旋转曲面，其局部法向速度等于速度的比例参数，并与磁力密度对齐。根据定义，所有尺度变量的时空分布必须沿着这个参考面移动。本文探讨了由此产生的标度理论及其对称性性质。通过一种新的坐标变换，得到了弯曲非稳态等离子体鞘套磁场的时空分布公式。获得了对雪犁效应的新见解。具有后边界的电流鞘层仅在电流减小时存在，且仅当载流等离子体密度小于填充气体密度时存在。 对于小型和大型器件，电流鞘层厚度相同。地磁通量压缩问题有一个精确解。},
  timestamp = {2024-10-21T14:06:06Z},
  file = {Auluck2024-symmetry_and_structure_in_the_“generalized_plasma_focus_problem”.pdf:Auluck2024-symmetry_and_structure_in_the_“generalized_plasma_focus_problem”.pdf:application/pdf}
}

@article{Avinash2024high,
  title = {The High Dust Density Regime of Dusty Plasma: {{Theory}} and Simulations},
  shorttitle = {The High Dust Density Regime of Dusty Plasma},
  author = {Avinash, K. and Kalita, S. J. and Ganesh, R. and Kaur, P.},
  date = {2024-08-12},
  journaltitle = {Physics of Plasmas},
  shortjournal = {Physics of Plasmas},
  volume = {31},
  number = {8},
  pages = {083702},
  issn = {1070-664X},
  doi = {10.1063/5.0211037},
  url = {https://doi.org/10.1063/5.0211037},
  urldate = {2024-10-18},
  abstract = {It is shown that the dust density regimes in the dusty plasma are characterized by two complementary screening processes: (i) the low dust density regime where the Debye screening is the dominant process and (ii) the high dust density regime where the “Coulomb screening” is the dominant process. The Debye regime is characterized by a state where all dust particles carry an equal and constant charge. The high dust density regime or the “Coulomb plasma” regime is characterized by (a) “Coulomb screening” where the dust charge depends on the spatial location and is screened by other dust particles in the vicinity by charge reduction, (b) “asymptotic freedom” where dust particles, which on an average carry minimal electric charge, are asymptotically free in the high dust density limit, (c) uniform dust charge density and plasma potential, (d) dust charge neutralization by a uniform background of hot ions, and (e) dust is weakly coupled due to strong Coulomb screening. Thus, the dusty plasma is essentially a weakly coupled, one-component plasma with screening in the high dust density limit. Molecular dynamics (MD) simulations verify these properties. The MD simulations are performed, using a recently proposed Hamiltonian formalism to study the dynamics of Yukawa particles carrying variable electric charge. A hydrodynamic model for describing the collective properties of Coulomb plasma and its characteristic acoustic mode called the “Coulomb acoustic mode” arising due to imperfect Coulomb screening is given.},
  timestamp = {2024-10-18T17:23:00Z},
  file = {Avinash2024-the_high_dust_density_regime_of_dusty_plasma_theory_and_simulations.pdf:Avinash2024-the_high_dust_density_regime_of_dusty_plasma_theory_and_simulations.pdf:application/pdf}
}

@article{Aymerich2024selforganised,
  title = {A Self-Organised Partition of the High Dimensional Plasma Parameter Space for Plasma Disruption Prediction},
  author = {Aymerich, Enrico and Fanni, Alessandra and Pisano, Fabio and Sias, Giuliana and Cannas, Barbara and Contributors, J. E. T. and family=Team, given=WPTE, given-i=WPTE},
  date = {2024-09},
  journaltitle = {Nuclear Fusion},
  shortjournal = {Nucl. Fusion},
  volume = {64},
  number = {10},
  pages = {106063},
  publisher = {IOP Publishing},
  issn = {0029-5515},
  doi = {10.1088/1741-4326/ad7474},
  url = {https://dx.doi.org/10.1088/1741-4326/ad7474},
  urldate = {2024-10-21},
  abstract = {This paper introduces a disruption predictor constructed through a fully unsupervised two-dimensional mapping of the high-dimensional JET operational space. The primary strength of this disruption predictor lies in its inherent self-organization capability. Diverging from both supervised disruption predictors and earlier approaches suggested by the same authors, which were based on unsupervised models such as Self-Organizing or Generative Topographic Maps, this predictor eliminates the need for labeling data of disruption terminated pulses during training. In prior methods, labels were indeed required post-mapping to inform the model about the presence or absence of disruption precursors at each time instant during the disrupted discharges. In contrast, our approach in this study involves no labeling of data from disruption-terminated experiments. The Self-Organizing Map, operating without any a priori information, adeptly identifies the regions characterizing the pre-disruptive phase. Moreover, SOM discovers non-trivial relationships and captures the complicated interplay of device diagnostics on the internal plasma states from the experimental data. The provided model is highly interpretable; it allows the visualization of high-dimensional data and facilitates easy interrogation of the model to understand the reasons behind its correlations. Hence, utilizing SOMs across various devices can prove invaluable in extracting rules and identifying common patterns, thereby facilitating extrapolation to ITER of the knowledge acquired from existing tokamaks.},
  langid = {english},
  annotation = {abstractTranslation: 本文介绍了一种通过对高维JET操作空间进行完全无监督的二维映射而构造的中断预测器。这种干扰预测器的首要优势在于其内在的自组织能力。与有监督的中断预测器和早期由相同作者提出的基于无监督模型(如自组织或生成地形图)的方法不同，该预测器消除了在训练过程中标记中断终止脉冲数据的需要。在之前的方法中，标签确实需要进行后映射，以告知模型在中断放电过程中每个时间点是否存在中断前体。 相比之下，我们的方法在本研究中不涉及对中断终止实验数据的标记。自组织映射( Self-Organizing Map )在没有任何先验信息的情况下运行，能够很好地识别出表征前扰动阶段的区域。此外，SOM发现了非平凡的关系，并从实验数据中捕获了设备诊断对内部等离子体状态的复杂相互作用。所提供的模型具有很强的可解释性；它允许高维数据的可视化，并便于对模型进行简单的审问，以了解其相关性背后的原因。 因此，在各种设备中使用SOM可以在提取规则和识别共同模式方面证明是非常有价值的，从而有利于将从现有托卡马克中获得的知识外推到ITER。},
  timestamp = {2024-10-21T13:17:48Z},
  file = {Aymerich2024-a_self-organised_partition_of_the_high_dimensional_plasma_parameter_space_for_plasma_disruption_pred.pdf:Aymerich2024-a_self-organised_partition_of_the_high_dimensional_plasma_parameter_space_for_plasma_disruption_pred.pdf:application/pdf}
}

