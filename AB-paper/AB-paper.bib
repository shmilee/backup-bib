  file = {LeeShadwick2024_A_new_method_for_solving_the_linearized_1D_Vlasov–Poisson_system_yielding_a_new.pdf:LeeShadwick2024_A_new_method_for_solving_the_linearized_1D_Vlasov–Poisson_system_yielding_a_new.pdf:application/pdf}
